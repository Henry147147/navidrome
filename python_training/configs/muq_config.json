{
  "model": {
    "type": "muq",
    "params": {
      "base_model": "sentence-transformers/all-MiniLM-L6-v2",
      "target_dim": 512,
      "enrichment_enabled": true,
      "dropout": 0.1
    }
  },
  "data": {
    "train_embeddings": "../data/embeddings/muq/train_embeddings.h5",
    "train_metadata": "../data/datasets/combined/train_metadata.json",
    "val_embeddings": "../data/embeddings/muq/val_embeddings.h5",
    "val_metadata": "../data/datasets/combined/val_metadata.json",
    "loader_params": {
      "batch_size": 256,
      "shuffle": true,
      "num_workers": 8,
      "max_text_length": 512
    }
  },
  "training": {
    "num_epochs": 100,
    "device": "cuda",
    "checkpoint_dir": "checkpoints/muq",
    "log_interval": 100,
    "loss": {
      "type": "combined",
      "params": {
        "temperature": 0.07,
        "infonce_weight": 1.0,
        "mse_weight": 0.1
      }
    },
    "optimizer": {
      "lr": 1e-4,
      "betas": [0.9, 0.999],
      "weight_decay": 0.01
    },
    "scheduler": {
      "warmup_ratio": 0.1,
      "min_lr": 1e-6
    }
  },
  "wandb": {
    "project": "music-text-embeddings",
    "name": "muq-text-embedder-v1"
  }
}
