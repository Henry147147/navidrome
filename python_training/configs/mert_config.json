{
  "model": {
    "type": "mert",
    "params": {
      "base_model": "roberta-base",
      "target_dim": 25600,
      "enrichment_enabled": true,
      "num_layers_to_use": 12,
      "dropout": 0.1
    }
  },
  "data": {
    "train_embeddings": "data/embeddings/mert/train_embeddings.h5",
    "train_metadata": "data/datasets/combined/train_metadata.json",
    "val_embeddings": "data/embeddings/mert/val_embeddings.h5",
    "val_metadata": "data/datasets/combined/val_metadata.json",
    "loader_params": {
      "batch_size": 64,
      "shuffle": true,
      "num_workers": 8,
      "max_text_length": 512
    }
  },
  "training": {
    "num_epochs": 100,
    "device": "cuda",
    "checkpoint_dir": "checkpoints/mert",
    "log_interval": 50,
    "loss": {
      "type": "combined",
      "params": {
        "temperature": 0.07,
        "infonce_weight": 1.0,
        "mse_weight": 0.05
      }
    },
    "optimizer": {
      "lr": 5e-5,
      "betas": [0.9, 0.999],
      "weight_decay": 0.01
    },
    "scheduler": {
      "warmup_ratio": 0.15,
      "min_lr": 1e-7
    }
  },
  "wandb": {
    "project": "music-text-embeddings",
    "name": "mert-text-embedder-v1"
  }
}
